<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/buttonBarId"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/tv_home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_bottombar_bg"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:src="@drawable/tabbar_home_auto" />
                <TextView
                    android:text="首页"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:textColor="@color/home_bottombar_font"
                    android:paddingBottom="4dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_message"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_bottombar_bg"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:src="@drawable/tabbar_message_auto" />
                <TextView
                    android:text="消息"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="bottom|center"
                    android:textColor="@color/home_bottombar_font"
                    android:paddingBottom="4dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_bottombar_bg"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/rect_orgin_auto">

                    <ImageView
                        android:id="@+id/fl_post"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="6dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginTop="6dp"
                        android:src="@drawable/tabbar_compose_icon_add" />

                </RelativeLayout>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/tv_discovery"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_bottombar_bg"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:src="@drawable/tabbar_discover_auto" />
                <TextView
                    android:text="发现"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/home_bottombar_font"
                    android:gravity="bottom|center"
                    android:paddingBottom="4dp"/>



            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/tv_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_bottombar_bg"
                android:orientation="vertical">



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:src="@drawable/tabbar_profile_auto" />
                <TextView
                    android:text="我的"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/home_bottombar_font"
                    android:gravity="bottom|center"
                    android:paddingBottom="4dp"/>


            </RelativeLayout>
        </LinearLayout>



</FrameLayout>